
struct MyVertex {
    float4 pos;
    float4 color;
};

struct VertexRaster internal {
    float4 pos : Position;
    float4 color : Color;
};

buffer<MyVertex> v_buffer : 0;

[in v_buffer]
vertex VertexRaster myVertex(uint vertex_id : VertexID){

    MyVertex vert = v_buffer[vertex_id];

    VertexRaster data;
    data.pos = vert.pos;
    data.color = vert.color;
    return data;
}

fragment float4 myFrag(VertexRaster raster){
     return raster.color;
}

// Dynamic Sampler
sampler2d mySampler : 1;

// Static Sampler
static sampler2d(filter=linear,max_anisotropy=16) myStaticSampler : 2;








