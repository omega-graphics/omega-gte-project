

@struct 
class MyVertex:
   pos:float2
   color:float4


buff:ConstBuffer[MyVertex,0]

text:Texture2D[float,1]


@struct
class VertexOut:
   pos:Position
   color:float4


@vertex(buff)
def myVertexShader() -> VertexOut:
    vertex:float2 = [1.0,1.4]

    return vertex



@fragment(text)
def myFragmentShader(input:VertexOut) -> float4:
    return input.color